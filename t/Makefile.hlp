testarg-hlp---help-cfg-regex:   TEST.args  += --help=cfg-regex
testarg-hlp---help-ciphers-text: TEST.args += --help=ciphers-text
testarg-hlp---help-ciphers-html: TEST.args += --help=ciphers-html
testarg-hlp---help-gen-docs:    TEST.args  += --help=gen-docs
testarg-hlp---help-gen-wiki:    TEST.args  += --help=gen-wiki
testarg-hlp---help-gen-html:    TEST.args  += --help=gen-html
testarg-hlp---help-gen-cgi:     TEST.args  += --help=gen-cgi
testarg-hlp---help-gen-pod:     TEST.args  += --help=gen-pod
testarg-hlp---help-exit:        TEST.args  += --help=exit
testarg-hlp---help-cmd--format-width:   TEST.args  += --format-width=54 --help=cmd
testarg-hlp---help-why--format-width:   TEST.args  += --format-width=54 --help=why
    # NOTE: options mus preceed --help=* option
#testarg-hlp---help-cmd--tty:    TEST.args  += --format-tty --help=cmd
#testarg-hlp---help-cmd--tty:    TEST.args  += --tty --help=cmd # alias
    # --tty does not produce different output, except on special devices

ALL.testhlp        += $(shell awk -F: '/^testarg-hlp-.*%/{next} /^testarg-hlp-/{arr[$$1]=1}$(_EXE.print_arr_END.awk)' $(_MYSELF.hlp))
ALL.test.hlp        = $(ALL.testhlp)
ALL.test.hlp.log    = $(ALL.test.hlp:%=%.log)

test.hlp.log-compare:   TEST.target_prefix  = testarg-hlp
test.hlp.log-move:      TEST.target_prefix  = testarg-hlp
test.hlp.log:           TEST.target_prefix  = testarg-hlp

test.hlp:           $(ALL.test.hlp)
test.hlp.log:       $(ALL.test.hlp.log) test.log-compare-hint
